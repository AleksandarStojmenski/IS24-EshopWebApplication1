@model List<Eshop.DomainEntities.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

    @for(int i=0;i<Model.Count();i++) {
        var item = Model[i];

    if (i % 3 == 0)
    {
    @:<div class="row">    
    }

       <div class="card" style="width: 20rem;">
              <img class="height50 card-img-top" src="@item.ImageUrl" alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
            <p class="card-text">@item.Price, @item.Description</p>
                <a href="/Products/AddToCart?id=@item.Id" class="btn btn-primary">Add to cart</a>
              </div>
    </div>
    if (i % 3 == 2)
    {
    @:</div>    
    
    }
}
